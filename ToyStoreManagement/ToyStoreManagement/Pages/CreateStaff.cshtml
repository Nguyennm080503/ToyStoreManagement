@page
@model ToyStoreManagement.Pages.CreateStaffModel
@{
	ViewData["Tittle"] = "Account Management";
}

<div class="row">
	<div class="col-12">
		<div class="my-5">
			<h3>New Staff Account</h3>
			<hr>
		</div>
		<form class="file-upload" method="post">
			<div class="row mb-5 gx-5">
				<div class="col-xxl-8 mb-5 mb-xxl-0">
					<div class="bg-secondary-soft px-4 py-5 rounded">
						<div class="row g-3">
							<h4 class="mb-4 mt-0">Profile detail</h4>
							<div class="col-md-6">
								<label class="form-label">Name *</label>
								<input type="text" class="form-control" placeholder="" aria-label="Name" name="Name" value="">
							</div>
							<div class="col-md-6">
								<label class="form-label">Phone number *</label>
								<input type="text" class="form-control" placeholder="" aria-label="Phone number" name="Phone" value="">
							</div>
							<div class="col-md-6">
								<label for="inputEmail4" class="form-label">Email *</label>
								<input type="email" class="form-control" id="inputEmail4" name="Email" value="" >
							</div>
							<div class="col-md-6">
								<label class="form-label">Address *</label>
								<input type="text" class="form-control" placeholder="" aria-label="Address" name="Address" value="">
							</div>
							<div class="col-md-6">
								<label class="form-label">Username *</label>
								<input type="text" class="form-control" placeholder="" aria-label="Username" name="Username" value="">
							</div>
							<div class="col-md-6">
								<label class="form-label">Password *</label>
								<input type="password" class="form-control" placeholder="" aria-label="Password" name="Password" value="">
							</div>
						</div>
					</div>
				</div>
				<div class="gap-3 d-md-flex justify-content-md-end text-center">
					<p style="color:red">@Model.Message</p>
					<button type="submit" class="btn btn-primary btn-lg">Create staff</button>
				</div>
		</form>
	</div>
</div>