@page
@model ToyStoreManagement.Pages.DashboardModel
@{
	ViewData["Title"] = "Dashboard";
}
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js">
    </script>
</head>
<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>
<div class="row">

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Products
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ProductNumber</div>
                    </div>
                    <div class="col-auto">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Customer
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CustomerNumber</div>
                    </div>
                    <div class="col-auto">
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Money
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MoneyTotal</div>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Feekback
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FeedbackNumber</div>
                    </div>
                    <div class="col-auto">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="row">

        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/js/chart-area-demo.js"></script>
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var pieChartData = {
        labels: @Html.Raw(Json.Serialize(Model.ProductCountEachCategory.Select(x => x.CategoryName))),
        data: @Html.Raw(Json.Serialize(Model.ProductCountEachCategory.Select(x => x.TotalProduct)))
        };
</script>
<script>
    var areaChartData = {
        labels: @Html.Raw(Json.Serialize(Model.TotalMoneyEachMonth.Select(x => x.OrderDate.Value.Month))),
        data: @Html.Raw(Json.Serialize(Model.TotalMoneyEachMonth.Select(x => x.TotalAmount)))
        };
</script>
<script src="~/js/chart-area-demo.js"></script>
<script src="~/js/Chart.min.js"></script>
<script src="~/js/chart-pie-demo.js"></script>
