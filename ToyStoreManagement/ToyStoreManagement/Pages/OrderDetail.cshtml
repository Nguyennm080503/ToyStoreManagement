@page
@model ToyStoreManagement.Pages.OrderDetailModel
@{
    ViewData["Tittle"] = "Order Management";
}

<div class="cardnew">
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">Full Name</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Order.Customer.Name" readonly>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Order.Customer.Email" readonly>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">Phone</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Order.Customer.Phone" readonly>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-3">
                <h6 class="mb-0">Address</h6>
            </div>
            <div class="col-sm-9 text-secondary">
                <input type="text" class="form-control" value="@Model.Order.Address" readonly>
            </div>
        </div>
    </div>
</div>

<div class="container px-3 my-5 clearfix">
    <div class="card">
        <div class="card-header">
            <h2>Detail Order @Model.Order.OrderId</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered m-0">
                    <thead>
                        <tr>
                            <th class="text-center py-3 px-4" style="min-width: 400px;">Product Name &amp; Details</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Price</th>
                            <th class="text-center py-3 px-4" style="width: 120px;">Quantity</th>
                            <th class="text-right py-3 px-4" style="width: 100px;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var orderdetail in Model.OrderDetails)
                        {
                            <tr>
                                <td class="p-4">
                                    <div class="media align-items-center">
                                        <img src="~/images/@orderdetail.Product.PhotoUrlThumnail" class="d-block ui-w-40 ui-bordered mr-4" alt="">
                                        <div class="media-body">
                                            <a href="#" class="d-block text-dark">@orderdetail.Product.Name</a>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-right font-weight-semibold align-middle p-4">@orderdetail.Product.Price</td>
                                <td class="align-middle p-4">@orderdetail.Quantity</td>
                                <td class="text-right font-weight-semibold align-middle p-4">@orderdetail.UnitPrice</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
                <div class="mt-4">
                </div>
                <div class="d-flex">
                    <div class="text-right mt-4 mr-5">
                        <label class="text-muted font-weight-normal m-0">Status</label>
                        <div class="text-large">
                                @if (Model.Order.Status == 1)
                                {
                                    <strong style="color:yellowgreen">Pending</strong>
                                }
                            @if(Model.Order.Status == 2)
                            {
                                <strong style="color:brown">Preparing</strong>
                            }
                            @if (Model.Order.Status == 3)
                            {
                                <strong style="color:aqua">Delivering</strong>
                            }
                            @if (Model.Order.Status == 4)
                            {
                                <strong style="color:green">Payment has been made</strong>
                            }
                            </div>
                    </div>
                    <div class="text-right mt-4">
                        <label class="text-muted font-weight-normal m-0">Total price</label>
                        <div class="text-large"><strong>@Model.Order.TotalAmount</strong></div>
                    </div>
                </div>
            </div>

            <div class="float-right">
                <a href="/ManageOrder" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">Back to Order List</a>
            </div>

        </div>
    </div>
</div>

<style>
    .ui-w-40 {
        width: 40px !important;
        height: auto;
    }

    .card {
        box-shadow: 0 1px 15px 1px rgba(52,40,104,.08);
    }

    .ui-product-color {
        display: inline-block;
        overflow: hidden;
        margin: .144em;
        width: .875rem;
        height: .875rem;
        border-radius: 10rem;
        -webkit-box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.15) inset;
        vertical-align: middle;
    }

    .cardnew {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid transparent;
        border-radius: .25rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
    }
</style>
